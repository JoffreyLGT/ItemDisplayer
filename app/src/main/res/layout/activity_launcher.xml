<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.joffreylagut.itemdisplayer.LauncherActivity">

    <ImageView
        android:id="@+id/iv_app_icon"
        android:contentDescription="@string/app_logo_content_description"
        android:layout_width="125dp"
        android:layout_height="125dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/tv_launch_error"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_launch_no_network"
        android:layout_below="@id/iv_app_icon"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />
</RelativeLayout>
